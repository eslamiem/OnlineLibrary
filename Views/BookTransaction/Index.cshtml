@model IEnumerable<OnlineLibrary.Models.BookTransaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">
                    <h5 class="mb-0">Due Date</h5>
                </th>
                <th class="text-center">
                    <h5 class="mb-0">Returned</h5>
                </th>
                <th class="text-center">
                    <h5 class="mb-0">Book Author</h5>
                </th>
                <th class="text-center">
                    <h5 class="mb-0">User ID</h5>
                </th>
                <th class="text-center">
                    <h5 class="mb-0">Actions</h5>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                var rowCount = 0;
            }
            @foreach (var item in Model)
            {
                <tr class="@((rowCount++ % 2 == 0) ? "table-primary" : "table-secondary")">
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Returned)
                    </td>
                    <td class="text-center">
                        @if (item.Book != null)
                        {
                            @Html.DisplayFor(modelItem => item.Book.Author)
                        }
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.User.Id)
                    </td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm mr-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-info btn-sm mr-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
